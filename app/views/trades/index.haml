%table.table.table-striped.table-hover.table-condensed
  %thead
    %tr.top_header_row
      %th.instrument_name{ :colspan => 3 }= "All trades in #{@instrument.name}"
      %th
      %th
  %tr
    %th
      .number_header
        time
    %th
      .number_header
        price
    %th
      .number_header
        volume
    %th
      .number_header
        buyer
    %th
      .number_header
        seller
  - @trades.each do |trade|
    %tr.trade
      %td
        .number= trade.timestamp
      %td
        .number= trade.price
      %td
        .number= trade.volume
      %td
        .number= @users[trade.buyer].email if @users[trade.buyer]
      %td
        .number= @users[trade.seller].email if @users[trade.seller]

