.modal{ :id => "#{type}-#{one_instrument.id}-modal", :tabindex => -1, :role => 'dialog', :style => 'display:none', |
        'aria-labelledby' => "#{type}ModalLabel", 'aria-hidden' => 'true' }
  .modal-header
    %h3
      = type.capitalize
  - order_url = "/instruments/#{one_instrument.id}/place_order"
  = form_tag order_url, :remote => true, :method => :put, :class => 'place_order', :instrument_id => "#{one_instrument.id}" do |f|
    .modal-body
      = label_tag :price
      = number_field_tag :price, nil, :min => 0.0, :class => :price_input, :step => :any
      = label_tag :volume
      = number_field_tag :volume, nil, :min => 0.0, :class => :volume_input, :step => :any
      = label_tag :note
      = text_area_tag :note
      = hidden_field_tag :type, type
    .modal-footer
      = submit_tag 'Place', :disabled => true, :class => 'place_order_button'
